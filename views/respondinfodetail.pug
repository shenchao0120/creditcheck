                tbody
                    - var count=0;
                    each repayobj in cusRepayInfo
                        - count++;
                        tr
                            td #{count}
                            td #{repayobj.bus_type}
                            td #{repayobj.bus_no}
                            td #{repayobj.ccy}
                            td #{repayobj.perd_no}
                            td #{repayobj.shd_pay_dt}
